UPDATE wp_options SET option_value = REPLACE(option_value, 'old', 'new') WHERE option_name = 'home' OR option_name = 'siteurl';
UPDATE wp_posts SET post_content = REPLACE (post_content, 'old', 'new');
UPDATE wp_posts SET post_excerpt = REPLACE (post_excerpt, 'old', 'new');
UPDATE wp_comments SET comment_content = REPLACE (comment_content, 'old', 'new');
UPDATE wp_comments SET comment_author_url = REPLACE (comment_author_url, 'old','new');
UPDATE wp_posts SET guid = REPLACE (guid, 'old', 'new') WHERE post_type = 'attachment';
